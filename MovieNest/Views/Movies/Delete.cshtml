@model MovieNest.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<!-- Centered Delete Card -->
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg rounded-3 w-50">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0 text-center">Delete Movie</h4>
        </div>
        <div class="card-body text-center">
            <h5 class="text-danger mb-4">Are you sure you want to delete this movie?</h5>

            <!-- Movie Details -->
            <dl class="row text-start">
                <dt class="col-sm-4">Movie Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Release Date</dt>
                <dd class="col-sm-8">@Model.ReleaseDate.ToShortDateString()</dd>

                <dt class="col-sm-4">Casting</dt>
                <dd class="col-sm-8">@Model.Casting</dd>

                <dt class="col-sm-4">Director</dt>
                <dd class="col-sm-8">@Model.Director</dd>

                <dt class="col-sm-4">Producer</dt>
                <dd class="col-sm-8">@Model.Producer</dd>
            </dl>

            <!-- Buttons -->
            <div class="mt-4 d-flex justify-content-center gap-3">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">No, Cancel</a>
            </div>
        </div>
    </div>
</div>
